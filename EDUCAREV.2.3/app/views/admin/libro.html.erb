
<%=render 'layouts/nav_admin' %>
<div class="col-sm-3 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">


    <div class="container" >
      <div class="row">


          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>

          <h1 align="center">Nuestros Productos</h1>
          <br>
          <br>
          <br>
          <br>
          <div class="row">
            <div class="col-sm-5 col-sm-offset-1">

            </div>
            <div class="col-sm-3 col-sm-offset-1 ">
              <%= form_tag page_libro_path, :method => 'get' do %>
                  <%= text_field_tag :search, params[:search] ,class:"form-control"%>
                  </div>
                  <div class="col-sm-0  col-sm-offset-1 ">
                    <%= submit_tag "Buscar", :nombre=> nil ,class:"btn btn-info" %>
                  </div>

                  </div>
              <% end %>
              <br>
              <br>
              <br>

              <% cache @products do %>
                  <div class="container" >

                    <% @products.each do |product| %>
                        <% cache product do %>
                            <% if product.tipo == 0 %>


                                <div class="col-md-4">
                                  <div class="thumbnail">
                                    <h5><%= product.nombre %></h5>
                                    <a href="<%=page_path(product) %>" title="ver en detalle"><%= image_tag(product.imagen, :style => 'width:200px', :style => 'height:200px', :class => 'img-responsive') %></a>

                                  </div>
                                </div>
                            <%end%>
                        <%end%>
                    <%end%>

                  </div>
              <%end%>
          </div>
          </div>
          </div>
          </div>